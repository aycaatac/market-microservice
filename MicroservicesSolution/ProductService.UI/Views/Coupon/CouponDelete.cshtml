@using ProductService.Models
@model CouponDto
<form asp-action="CouponDelete">
    <br />
    <div class="card shadow border-0 mt-4" style="border-radius: 20px; padding: 10px;">
        <h1 class="text-dark text-center">Delete a Coupon</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">CouponId</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponId" class="form-control" />
                <span asp-validation-for="CouponId" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a href="/Product/ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
