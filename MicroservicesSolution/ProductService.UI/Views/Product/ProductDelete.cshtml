@using ProductService.Models
@model ProductDto
<form asp-action="ProductDelete">
    <br />
    <div class="card shadow border-0 mt-4" style="border-radius: 20px; padding: 10px;">
        <h1 class="text-dark text-center" >Delete a Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ProductId</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>           
            <div class="col-5 offset-2">

                <a href="/Product/ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
            @if (TempData["producterror"] != null)
            {
                <div id="notification" class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["producterror"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>
</form>
