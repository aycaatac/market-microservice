@using Newtonsoft.Json
@using ProductService.Models
@using ProductService.Utility
@model IEnumerable<ProductDto>
<link rel="stylesheet" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="card shadow border-0 mt-4" style="border-radius: 20px; padding: 10px;">
    <div class="row align-items-center">
        <div class="col text-center text-md-start" style="padding-left: 15px; padding-top: 5px;">
            <h1 style="color:black; margin-left: 10px; margin-top: 5px;">Products</h1>
        </div>
       
    </div>
    @if (User.IsInRole(SD.RoleAdmin.ToLower()))
    {
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a href="/Product/ProductCreate" class="btn btn-outline-primary me-2">
                        <i class="bi bi-plus-square"></i> Create New Product
                    </a>
                    <a href="/Product/ProductUpdate" class="btn btn-outline-primary me-2">
                        <i class="bi bi-pencil-square"></i> Edit a Product
                    </a>
                    <a href="/Product/ProductDelete" class="btn btn-outline-primary">
                        <i class="bi bi-trash"></i> Delete a Product
                    </a>
                </div>
            </div>
        </div>
    }

        <div class="container" style="margin-top:30px;">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 225px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text" style="font-weight:bold">@item.CategoryName</p>
                                <p class="card-text">@((item.Price).ToString("c"))</p>
                                <div class="d-flex justify-content-between align-items-center">                                    
                                    <div class="dropdown">
                                        <button class="dropbtn" style="background-color: #dedede; color:black" >Details</button>
                                        <div class="dropdown-content">
                                            <a href="#">@item.Description</a>                                           
                                        </div>
                                    </div>
                                <form action="/Product/ProductAddToCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="productName" value="@item.Name" />
                                    <input type="hidden" name="productPrice" value="@item.Price" />
                                    <input type="hidden" name="imageUrl" value="@item.ImageUrl" />
                                    @if (!User.IsInRole(SD.RoleAdmin.ToLower()))
                                    {
                                        <button type="submit" href="/Product/ProductAddToCart" class="btn btn-sm" style="background-color: #7F00FF; color: #FFF">Add to cart</button>
                                    }                                    
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
</div>




<script>
    $(document).ready(function() {
        $.ajax({
            url: '/Your/Action',
            type: 'POST',
            success: function(data) {
                // Handle success
                console.log('Request succeeded');
            },
            error: function(xhr) {
                if (xhr.status === 403) {
                    // Display an error message or redirect
                    alert('You are not authorized to perform this action.');
                }
            }
        });
    });
</script>