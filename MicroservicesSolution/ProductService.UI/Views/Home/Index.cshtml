@using ProductService.Utility
@{
    ViewData["Title"] = "Home";
}

@if (!User.IsInRole(SD.RoleAdmin.ToLower()))
{
    <div class="text-center" style="margin-top:20px; margin-bottom:20px;">
        <h2 class="font-weight-bold">Welcome to Ayca Market!</h2>
    </div>
}

@if (!User.Identity.IsAuthenticated)
{


    <div class="card-body p-4">
        <div class="text-center" style="margin-top:5px; margin-bottom:20px;">
            <h2 class="font-weight-bold">Please login or register to continue</h2>
        </div>
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a href="/Auth/Login" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil-square"></i> Login
                </a>
                <a href="/Auth/Register" class="btn btn-outline-primary me-2">
                    <i class="bi bi-plus-square"></i> Register
                </a>
            </div>
        </div>
    </div>
}
else
{
    @if (!User.IsInRole(SD.RoleAdmin.ToLower()))
    {
        <div class="container" style="margin-top:30px;">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm" style="border-radius:25px;margin-top:80px;">
                        <!-- Bootstrap Carousel for Slideshow -->
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="border-radius:25px;">
                            <div class="carousel-inner" style="height: 225px;">
                                <div class="carousel-item active">
                                    <img src="https://media.istockphoto.com/id/589415708/tr/foto%C4%9Fraf/fresh-fruits-and-vegetables.jpg?s=612x612&w=0&k=20&c=TzaFmq6d1_F621JGJv1YIYe-NWijB4T-j2JKkxvPqI0=" class="d-block w-100" alt="Product 1" style="height: 225px; object-fit: cover;">
                                </div>
                                <div class="carousel-item">
                                    <img src="https://w0.peakpx.com/wallpaper/461/4/HD-wallpaper-%E5%8F%AF%E6%84%9B%E3%81%84-convenient-store-aesthetic-japanese-grocery-aesthetic-background-aesthetic-food.jpg" class="d-block w-100" alt="Product 2" style="height: 225px; object-fit: cover;">
                                </div>
                                <div class="carousel-item">
                                    <img src="https://thebostondaybook.com/wp-content/uploads/2024/05/Willow-Tree-Market-1.jpg" class="d-block w-100" alt="Product 3" style="height: 225px; object-fit: cover;">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" style="color:black" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                        <!-- Card Body -->
                        <a href="/Product/ProductIndex" style="text-decoration: none; color: inherit;">
                            <div class="card-body" style="border-radius:25px; padding: 10px;">
                                <h5 class="card-title">Check out our products!</h5>
                                <p class="card-text" style="font-weight:bold">We always provide you with fresh, healthy products for a reasonable price!</p>


                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm" style="border-radius:25px;margin-top:80px;">
                        <img src="https://as2.ftcdn.net/v2/jpg/03/29/10/97/1000_F_329109774_iTsyjzLU5O9cagJ9UhahhNF2ZdkW4OHc.jpg" class="card-img-top" style="height: 225px; object-fit: cover;">
                        <a href="/Coupon/CouponIndex" style="text-decoration: none; color: inherit;">
                            <div class="card-body" style="border-radius:25px; padding: 10px;">
                                <h5 class="card-title">Discover our coupons!</h5>
                                <p class="card-text" style="font-weight:bold">Personalized coupons and rewards are waiting for you!</p>


                            </div>
                        </a>
                    </div>
                </div>


                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm" style="border-radius:25px;margin-top:80px;">
                        <img src="https://iheartcraftythings.com/wp-content/uploads/2022/02/Stars-6-01.png" class="card-img-top" style="height: 225px; object-fit: cover;">
                        <a href="/Reward/RewardIndex" style="text-decoration: none; color: inherit;">
                            <div class="card-body" style="border-radius:25px; padding: 10px;">
                                <h5 class="card-title">My Rewards</h5>
                                <p class="card-text" style="font-weight:bold">See your progress and points! You will gain points for every order you place!</p>


                            </div>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    }

    else
    {


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
@if (!User.Identity.IsAuthenticated)
{


    <div class="card-body p-4">
        <div class="text-center">
            <h1 class="display-4">Please Login or Register to continue</h1>
        </div>
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a href="/Auth/Login" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil-square"></i> Login
                </a>
                <a href="/Auth/Register" class="btn btn-outline-primary me-2">
                    <i class="bi bi-plus-square"></i> Register
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="card-body p-4">
        <div class="text-center">
            <h1 class="display-4">You are logged in!</h1>
        </div>
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a href="/Auth/Logout" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil-square"></i> Logout
                </a>
                
            </div>
        </div>
    </div>
}



    }

}
