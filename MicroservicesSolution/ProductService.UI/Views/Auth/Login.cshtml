@model LoginUserDto

<form method="post">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="container p-4">
            <div class="row text-center">
                <h1>Login</h1>
            </div>
            <div class="row">
                <div class="col-6 offset-3 pb-2">
                    <input asp-for="Name" class="form-control" placeholder="Username.." />
                </div>
                <div class="col-6 offset-3 pb-2">
                    <input asp-for="Password" class="form-control" placeholder="Password.." type="password" />
                </div>
                <div class="col-6 offset-3 pb-2 d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-outline-primary me-2 btn-lg" value="Submit">Login</button>
                </div>
            </div>
            @if (TempData["success1"] != null)
            {
                <div id="notification" class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["success1"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}