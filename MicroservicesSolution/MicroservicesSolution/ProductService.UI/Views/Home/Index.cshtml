@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
@if (!User.Identity.IsAuthenticated)
{


    <div class="card-body p-4">
        <div class="text-center">
            <h1 class="display-4">Please Login or Register to continue</h1>
        </div>
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a href="/Auth/Login" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil-square"></i> Login
                </a>
                <a href="/Auth/Register" class="btn btn-outline-primary me-2">
                    <i class="bi bi-plus-square"></i> Register
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="card-body p-4">
        <div class="text-center">
            <h1 class="display-4">You are logged in!</h1>
        </div>
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a href="/Auth/Logout" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil-square"></i> Logout
                </a>
                
            </div>
        </div>
    </div>
}
